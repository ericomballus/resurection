<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <!-- <header><%- include('../partials/header'); %></header>-->

    <main>
      <!-- action="http://192.168.1.31:3000/customerTaxi"-->
      <form action="<%= postUrl %>" method="post" class="jumbotron">
        <div class="col-sm-12 col-xs-12">
          <div class="col-sm-4 col-xs-12">
            <label for="inputPassword" class="col-sm-2 col-form-label"
              >Telephone</label
            >
            <div>
              <input
                type="tel"
                class="form-control"
                id="inputPassword"
                name="phone"
              />
            </div>
          </div>

          <div class="col-sm-12 col-xs-12" style="display: none">
            <div class="col-sm-4 col-xs-12">
              <label for="inputPassword" class="col-sm-2 col-form-label"
                >driver Id</label
              >
              <div>
                <input
                  type="text"
                  class="form-control"
                  name="driverId"
                  value="<%=driver._id%>"
                />
              </div>
            </div>
          </div>
          <div class="col-sm-12 col-xs-12" style="display: none">
            <div class="col-sm-4 col-xs-12">
              <label for="inputPassword" class="col-sm-2 col-form-label"
                >driver Phone</label
              >
              <div>
                <input
                  type="text"
                  class="form-control"
                  name="driver_phone"
                  value="<%=driver.phone%>"
                />
              </div>
            </div>
          </div>
          <div class="pt-3 col-sm-4 col-xs-12">
            <select
              class="form-select form-control"
              aria-label="Default select example"
              id="Provider"
              name="provider"
            >
              <option selected>Select Provider</option>
              <option value="2">Orange Cameroun</option>
              <option value="1">Mtn Cameroun</option>
            </select>
          </div>
          <div class="p-3 col-sm-4 col-xs-12">
            <button type="submit" class="btn btn-primary">
              Confirm identity
            </button>
          </div>
        </div>
      </form>
      <div class="card" style="width: 100%; height: 100%">
        <img
          src="<%= pubUrl %>"
          class="card-img-top"
          style="width: 100%; height: 100%"
        />
      </div>
    </main>

    <!-- <footer><%- include('../partials/footer'); %></footer>-->
  </body>
</html>
